{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/martellcode/vega-population/schema/persona.schema.json",
  "title": "Vega Persona",
  "description": "Schema for a Vega persona package",
  "type": "object",
  "required": ["kind", "name", "version", "description", "system_prompt"],
  "properties": {
    "kind": {
      "type": "string",
      "const": "persona"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Persona name (lowercase, alphanumeric with hyphens)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of the persona"
    },
    "author": {
      "type": "string",
      "description": "Author name or GitHub username"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags for discovery"
    },
    "recommended_skills": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Skills that work well with this persona"
    },
    "system_prompt": {
      "type": "string",
      "description": "The main system prompt for this persona"
    },
    "system_prompt_append": {
      "type": "string",
      "description": "Additional content to append to system prompt"
    },
    "allowed_tools": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Whitelist of allowed tools (if set, only these are available)"
    },
    "deny_tools": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Blacklist of denied tools"
    }
  }
}
